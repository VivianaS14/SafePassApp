<h1 class="mt-5">New Entry</h1>

<div class="row">
    <div class="col">
        <div class="card mt-2">
            <div class="card-body">
                <% if @entry.errors.any? %>
                    <div id="error_explanation" class="alert alert-danger" role="alert">
                        <h4>Please fix the <%= pluralize(@entry.errors.count, 'error') %> bellow and try again</h4>

                        <ul>
                            <% @entry.errors.each do | e | %>
                                <li><%= e.full_message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <%= form_with(model: @entry) do | f | %>
                    <div class="form-floating mb-3">
                        <%= f.text_field(:name, placeholder: 'Name', class: 'form-control') %>
                        <%= f.label(:name) %>
                    </div>
                    <div class="form-floating mb-3">
                        <%= f.text_field(:url, placeholder: 'URL', class: 'form-control') %>
                        <%= f.label(:url) %>
                    </div>
                    <div class="form-floating mb-3">
                        <%= f.text_field(:username, placeholder: 'Username', class: 'form-control') %>
                        <%= f.label(:username) %>
                    </div>
                    <div class="form-floating mb-3">
                        <%= f.text_field(:password, placeholder: 'Password', class: 'form-control') %>
                        <%= f.label(:password) %>
                    </div>
                    <%= f.submit('Create new entry', class: 'btn btn-primary') %>
                <% end %>
            </div>
        </div>
    </div>
</div>
